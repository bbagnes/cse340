<!-- Generate a title with values created in the controller, or return the home view. -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div id="Form">
    <form action="/contact/sendMessage" method="post">
      <p>Comment, Question, Suggestion, or Complaint? Send it here:<br>
        <small>ALL FIELDS ARE REQUIRED.</small></p><br>
      <label for="contact_firstname" >First Name:</label><br>
      <input type="text" name="contact_firstname" id="contact_firstname" required
       pattern="[A-Za-z]{3,}" aria-label="Enter your First Name" value="<%= locals.contact_firstname %>"><br>
      <label for="contact_lastname" >Last Name:</label><br>
      <input type="text" name="contact_lastname" id="contact_lastname" required
       pattern="[A-Za-z]{3,}" aria-label="Enter your Last Name" value="<%= locals.contact_lastname %>"><br>
      <label for="contact_email">Email Address:</label><br>
      <input type="email" name="contact_email" id="contact_email" required
       placeholder="Enter a valid email address" aria-label="Enter your Email" value="<%= locals.contact_email %>"><br>
            
      <label for="message_type">Message Type:</label><br>
      <select id="message_type" name="message_type" required>
        <option value="">Select a Message Type</option>
        <option value="comment">Comment</option>
        <option value="question">Question</option>
        <option value="suggestion">Suggestion</option>
        <option value="complaint">Complaint</option>
      </select><br>     
      <label for="message_content" >Message:</label><br>
      <textarea name="message_content" id="message_content" required
        aria-label="Tell us your comment, question, complaint, or suggestion."
        placeholder="Character Limit: 300." maxlength="300"></textarea><br>
      <input id="submitButton" type="submit" aria-label="Send us your comment, question, complaint, or suggestion." value="Send">    
    </form>
</div>