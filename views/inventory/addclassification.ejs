<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div id="Form">
    <form action="/inv/addClass" method="post">
      <label for="classification_name">Classification Name:</label><br>
      <input type="text" name="classification_name" id="classification_name" required pattern="[A-Za-z]{3,}" aria-label="Enter a Classification Name" value="<%= locals.classification_name %>"><br>
       <p>Classification Name must be at least 3 characters long, and Alphabetical.</p><br>
      <input id="submitButton" type="submit" value="Register">    
    </form>
</div>