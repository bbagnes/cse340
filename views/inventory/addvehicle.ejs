<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div id="Form">  
  <form action="/inv/addvehicle" method="post">
    <p>ALL FIELDS ARE REQUIRED.</p><br>
    <fieldset>
    <label for="classification_id">Classification</label><br>
    <%- classificationSelect %><br>
    <label for="inv_make">Make</label><br>
    <input type="text" name="inv_make" id="inv_make" required pattern="[a-zA-Z0-9-]{3,}" placeholder="Min of 3 characters" aria-label="Enter the make" value="<%= locals.inv_make %>"><br>
    <label for="inv_model">Model</label><br>
    <input type="text" name="inv_model" id="inv_model" required pattern="[A-Za-z0-9-]{3,}" aria-label="Enter the model" placeholder="Min of 3 characters" value="<%= locals.inv_model %>"><br>
    <label for="inv_description" >Description</label><br>
    <textarea name="inv_description" id="inv_description" required maxlength="300" aria-label="Enter a vehicle description"></textarea><br>
    <label for="inv_image">Image</label><br>
    <input type="text" name="inv_image" id="inv_image" required aria-label="Please select the image file for this vehicle." value="/images/vehicles/no-image.png"><br>
    <label for="inv_thumbnail">Thumbnail</label><br>
    <input type="text" name="inv_thumbnail" id="inv_thumbnail" required aria-label="Please select the thumbnail image file for this vehicle." value="/images/vehicles/no-image-tn.png"><br>
    <label for="inv_price">Price</label><br>
    <input type="number" name="inv_price" id="inv_price" required placeholder="decimal or integer" aria-label="Enter vehicle price without a dollar sign or comma." value="<%= locals.inv_price %>"><br>
    <label for="inv_year">Year</label><br>
    <input type="number" name="inv_year" id="inv_year" min="1890" max="2350" required placeholder="4-digit year" aria-label="Enter the four digit vehicle year" value="<%= locals.inv_year %>"><br>
    <label for="inv_miles">Mileage</label><br>
    <input type="number" name="inv_miles" id="inv_miles" min="0" required placeholder="digits only" aria-label="Enter the vehicle mileage, digits only" value="<%= locals.inv_miles %>"><br>
    <label for="inv_color">Color</label><br>
    <input type="text" name="inv_color" id="inv_color" required aria-label="Enter the vehicle color" value="<%= locals.inv_color %>"><br>
    <input id="submitButton" type="submit" value="Add Vehicle">
  </fieldset>    
  </form>
</div>