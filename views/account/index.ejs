<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>
<div id="manageAcct">
  <% const authorized = locals.accountData.account_type; 
    if (authorized === "Admin" || authorized === "Employee"){ %>
      <h2>Welcome <%- locals.accountData.account_firstname %></h2>
      <p>You're logged in.</p>
      <a href="/account/update/<%- locals.accountData.account_id %>">Edit Account Information</a>
      <h3>Inventory Management</h3>
      <p><a title="Manage Inventory" href="/inv">Manage Inventory</a></p>
    <%}else{%>
      <h2>Welcome <%- locals.accountData.account_firstname %></h2>
      <p>You're logged in.</p>
      <a href="/account/update/<%- locals.accountData.account_id %>">Edit Account Information</a>
    <% } %> 
</div>
